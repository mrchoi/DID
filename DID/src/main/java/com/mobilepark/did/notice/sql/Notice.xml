<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="notice">
	
	<select id="list" parameterType="HashMap" resultType="Notice">
		SELECT kind, title, contents, id, status, register_date 
		FROM tbl_notice
		<if test="pg != null and pg != ''">
			LIMIT #{pg.startPoint}, #{pg.endPoint}
		</if>
	</select>
	
	<select id="count" parameterType="java.util.HashMap" resultType="int">
		SELECT count(*)
		FROM tbl_notice
	</select>
	
</mapper>